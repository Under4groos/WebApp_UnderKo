@page
 
@model WebApp_UnderKo.Pages.ReleasesModel
@{
}
<div class="container">
    @foreach (var item in Model.Names)
    {
        <div class="bg-body-tertiary p-5 rounded">
            <h1 class="text-break ">@item.Item1</h1>
            <p class="lead text-break lh-sm">@item.Item2</p>
            @if (!string.IsNullOrEmpty(item.Item3.Item1))
            {
                <a class="btn btn-lg btn-dark m-1" href="@item.Item3.Item1" role="button">Show</a>
            }
            @if (!string.IsNullOrEmpty(item.Item3.Item2))
            {
                <a class="btn btn-lg btn-dark m-1" href="@item.Item3.Item2" role="button">Download</a>
            }
            
        </div>
       
    }
</div>

